{
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "breadcrumbs.showConstructors": true,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "autopep8.args": [
    "--indent-size=4",
    "--ignore=E121",
    "--max-line-length=180"
  ],
  "vim.handleKeys": {
    "<C-n>": false,
    "<C-p>": false,
    "<C-a>": false
  },
  "vscode_custom_css.imports": [
    "file:///Users/hyeondg/.vscode/custom.css"
  ],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.fontFamily": "Noto Sans Mono, SF Mono, Source Code Pro, Cascadia Mono, Menlo, Consolas, monospace",
  "editor.fontWeight": 400,
  "security.workspace.trust.untrustedFiles": "open",
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "vim.ignorecase": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.camelCaseMotion.enable": true,
  "vim.useSystemClipboard": true,
  "editor.scrollbar.verticalScrollbarSize": 50,
  "editor.wordWrapColumn": 120,
  "rust-analyzer.inlayHints.closureStyle": "rust_analyzer",
  "editor.lineHeight": 1.4,
  "editor.letterSpacing": -0.45,
  "editor.cursorSurroundingLines": 5,
  "editor.cursorBlinking": "solid",
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, AlwaysBreakAfterDefinitionReturnType: All, ColumnLimit: 120, PointerAlignment: Left }",
  "editor.inlayHints.padding": true,
  "editor.inlayHints.fontFamily": "sans-serif",
  "terminal.integrated.defaultLocation": "editor",
  "git.openRepositoryInParentFolders": "never",
  "editor.cursorStyle": "block",
  "workbench.reduceMotion": "on",
  "terminal.integrated.tabs.enableAnimation": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "notebook.formatOnCellExecution": true,
  "python.analysis.userFileIndexingLimit": -1,
  "notebook.lineNumbers": "on",
  "search.showLineNumbers": true,
  "editor.scrollbar.vertical": "visible",
  "editor.fontSize": 14,
  "editor.minimap.autohide": true,
  "files.trimTrailingWhitespace": true,
  "notebook.compactView": false,
  "notebook.stickyScroll.mode": "flat",
  "notebook.output.scrolling": false,
  "terminal.integrated.sendKeybindingsToShell": true,
  "window.titleBarStyle": "custom",
  "update.mode": "none",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "cmake.showOptionsMovedNotification": false,
  "remote.SSH.connectTimeout": 1800,
  "breadcrumbs.enabled": false,
  "editor.autoClosingComments": "never",
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.indent": 4,
  "workbench.colorTheme": "Nord",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
}
