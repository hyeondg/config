{
  "editor.fontFamily": "Monaco, Noto Sans Mono, Liberation Mono, SF Mono, Menlo, monospace",
  "editor.fontWeight": 400,
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "breadcrumbs.showConstructors": true,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "autopep8.args": [
    "--indent-size=2",
    "--ignore=E121",
    "--max-line-length=180"
  ],
  "security.workspace.trust.untrustedFiles": "open",
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "vim.ignorecase": true,
  "vim.incsearch": true,
  "editor.scrollbar.verticalScrollbarSize": 50,
  "editor.wordWrapColumn": 120,
  "rust-analyzer.inlayHints.closureStyle": "rust_analyzer",
  "editor.lineHeight": 1.4,
  "editor.letterSpacing": -0.45,
  "terminal.integrated.letterSpacing": -0.45,
  "editor.cursorSurroundingLines": 5,
  "editor.cursorBlinking": "solid",
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#00000000",
    "editorInlayHint.foreground": "#666666FF",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff",
    "statusBar.background": "#5f00af",
    "statusBar.noFolderBackground": "#5f00af",
    "statusBar.debuggingBackground": "#5f00af"
  },
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, AlwaysBreakAfterDefinitionReturnType: All, ColumnLimit: 120, PointerAlignment: Left }",
  "editor.inlayHints.padding": true,
  "editor.inlayHints.fontFamily": "sans-serif",
  "terminal.integrated.defaultLocation": "editor",
  "git.openRepositoryInParentFolders": "never",
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.camelCaseMotion.enable": true,
  "vim.easymotionMarkerBackgroundColor": "#3C6478",
  "vim.handleKeys": {
    "<C-n>": false,
    "<C-p>": false,
    "<C-a>": false
  },
  "vim.useSystemClipboard": true,
  "editor.cursorStyle": "block",
  "workbench.reduceMotion": "on",
  "terminal.integrated.tabs.enableAnimation": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.tabSize": 2,
  "notebook.formatOnCellExecution": true,
  "python.analysis.userFileIndexingLimit": -1,
  "notebook.lineNumbers": "on",
  "search.showLineNumbers": true,
  "editor.scrollbar.vertical": "visible",
  "editor.fontSize": 14,
  "editor.minimap.autohide": true,
  "files.trimTrailingWhitespace": true,
  "workbench.iconTheme": "vs-minimal",
  "vim.smartRelativeLine": true,
  "notebook.compactView": false,
  "notebook.stickyScroll.mode": "flat",
  "notebook.output.scrolling": false,
  "terminal.integrated.sendKeybindingsToShell": true,
  "window.titleBarStyle": "native",
  "update.mode": "none",
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.insert": "#8C1515",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "update.showReleaseNotes": false,
  "cmake.showOptionsMovedNotification": false,
  "remote.SSH.connectTimeout": 1800,
  "breadcrumbs.enabled": false,
  "editor.autoClosingComments": "never",
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.indent": 4,
  "workbench.colorTheme": "Nord"
}
